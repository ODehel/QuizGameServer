<Window x:Class="QuizGame.Presentation.Wpf.TestBuzzersWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:behaviors="clr-namespace:QuizGame.Presentation.Wpf.Behaviors"
        xmlns:converters="clr-namespace:QuizGame.Presentation.Wpf.Converters"
        mc:Ignorable="d"
        Title="Test des Buzzers" Height="600" Width="900"
        WindowStartupLocation="CenterOwner"
        Background="#F5F5F5">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="#2C3E50" Padding="20">
            <StackPanel Orientation="Vertical">
                <TextBlock Text="Test des Buzzers Connectes" 
                           FontSize="22" FontWeight="Bold" Foreground="White" Margin="0,0,0,10"/>
                <TextBlock Text="{Binding StatusMessage}" 
                           FontSize="13" Foreground="#ECF0F1"/>
            </StackPanel>
        </Border>

        <!-- Main Content -->
        <Grid Grid.Row="1" Margin="20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="1*"/>
            </Grid.ColumnDefinitions>

            <!-- Left Panel: Buzzers List and Test Buttons -->
            <StackPanel Grid.Column="0" Margin="0,0,10,0">
                <!-- Connected Buzzers Section -->
                <Border Background="White" CornerRadius="5" Padding="15" Margin="0,0,0,15">
                    <StackPanel>
                        <TextBlock Text="Buzzers Connectes" FontSize="14" FontWeight="Bold" Margin="0,0,0,10"/>
                        <TextBlock Text="{Binding ConnectedBuzzers.Count, StringFormat='Total: {0}'}" 
                                   FontSize="12" Foreground="#7F8C8D" Margin="0,0,0,10"/>
                        
                        <ListBox ItemsSource="{Binding ConnectedBuzzers}"
                                 Background="#ECEFF1" BorderThickness="0" Height="350">
                            <ListBox.ItemTemplate>
                                <DataTemplate>
                                    <Border Background="White" CornerRadius="3" Padding="10" Margin="0,3">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>

                                            <StackPanel Grid.Column="0" VerticalAlignment="Center">
                                                <TextBox Text="{Binding Name, UpdateSourceTrigger=LostFocus}"
                                                         Background="#F8F9F9" Foreground="#2C3E50"
                                                         Padding="5" FontSize="12" FontWeight="Bold"
                                                         Height="30" Margin="0,0,0,5"
                                                         behaviors:TextBoxLostFocusBehavior.LostFocusCommand="{Binding DataContext.RenameBuzzerCommand, RelativeSource={RelativeSource AncestorType=ListBox}}"/>
                                                <TextBlock Text="{Binding IpAddress}" FontSize="11" Foreground="#7F8C8D"/>
                                                <TextBlock Text="{Binding MacAddress}" FontSize="10" Foreground="#BDC3C7"/>
                                            </StackPanel>

                                            <StackPanel Grid.Column="1" VerticalAlignment="Center" Margin="10,0,0,0">
                                                <TextBlock Text="✓ Connecte" FontSize="11" FontWeight="Bold" Foreground="#27AE60"/>
                                            </StackPanel>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ListBox.ItemTemplate>
                        </ListBox>
                    </StackPanel>
                </Border>

                <!-- Action Buttons -->
                <Border Background="White" CornerRadius="5" Padding="15">
                    <StackPanel>
                        <TextBlock Text="Actions de Test" FontSize="14" FontWeight="Bold" Margin="0,0,0,15"/>
                        
                        <Button Command="{Binding TestCommunicationCommand}"
                                Background="#3498DB" Foreground="White"
                                Padding="15,15" FontSize="12" FontWeight="Bold"
                                Cursor="Hand" Height="50" Margin="0,0,0,10">
                            <StackPanel Orientation="Vertical" HorizontalAlignment="Center">
                                <TextBlock Text="Tester Communication Bluetooth" FontSize="13" FontWeight="Bold"/>
                                <TextBlock Text="Envoyer: action TestCommunicationBluetooth" FontSize="10" Foreground="#ECF0F1"/>
                            </StackPanel>
                        </Button>

                        <Button Command="{Binding StartQuizCommand}"
                                Background="#27AE60" Foreground="White"
                                Padding="15,15" FontSize="12" FontWeight="Bold"
                                Cursor="Hand" Height="50">
                            <StackPanel Orientation="Vertical" HorizontalAlignment="Center">
                                <TextBlock Text="Demarrer le Quiz" FontSize="13" FontWeight="Bold"/>
                                <TextBlock Text="Envoyer: action DebutQuiz" FontSize="10" Foreground="#ECF0F1"/>
                            </StackPanel>
                        </Button>
                    </StackPanel>
                </Border>
            </StackPanel>

            <!-- Right Panel: Test Logs -->
            <StackPanel Grid.Column="1" Margin="10,0,0,0">
                <Border Background="White" CornerRadius="5" Padding="15">
                    <StackPanel>
                        <Grid Margin="0,0,0,10">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <TextBlock Text="Journal de Test" FontSize="14" FontWeight="Bold"/>
                            <Button Grid.Column="1"
                                    Command="{Binding ClearLogsCommand}"
                                    Content="Effacer"
                                    Background="#95A5A6" Foreground="White"
                                    Padding="10,5" FontSize="11"
                                    Cursor="Hand"/>
                        </Grid>

                        <ListBox ItemsSource="{Binding TestLogs}"
                                 Background="#ECEFF1" BorderThickness="0" Height="500">
                            <ListBox.ItemTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding DisplayText}" FontSize="11"
                                              Margin="5" TextWrapping="Wrap">
                                        <TextBlock.Foreground>
                                            <MultiBinding Converter="{StaticResource LogTypeToColorConverter}">
                                                <Binding Path="Type"/>
                                            </MultiBinding>
                                        </TextBlock.Foreground>
                                    </TextBlock>
                                </DataTemplate>
                            </ListBox.ItemTemplate>
                        </ListBox>
                    </StackPanel>
                </Border>
            </StackPanel>
        </Grid>

        <!-- Footer -->
        <Border Grid.Row="2" Background="#34495E" Padding="20" BorderThickness="0,1,0,0" BorderBrush="#2C3E50">
            <TextBlock Text="Tous les buzzers doivent repondre avec status: received" 
                       Foreground="#ECF0F1" FontSize="11"/>
        </Border>
    </Grid>
</Window>
